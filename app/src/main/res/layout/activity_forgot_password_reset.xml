<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top|center_horizontal"
    android:background="#FFFFFF">

    <!-- Username -->
    <ImageView
        android:id="@+id/logo_vertic"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Mật khẩu mới"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/stroke_selector"
        app:boxStrokeWidth="1dp"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="#000000"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPasswordNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/inter_18pt_light"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Xác nhận mật khẩu mới"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/stroke_selector"
        app:boxStrokeWidth="1dp"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="#000000"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPasswordNewCf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/inter_18pt_light"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LOGIN Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XÁC NHẬN"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter_18pt_bold"
        app:cornerRadius="12dp"
        app:iconPadding="8dp"
        app:backgroundTint="#FF5722" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/resetloginHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại đăng nhập"
            android:fontFamily="@font/inter_24pt_regular"
            android:textSize="16sp"
            android:textColor="#FF5722"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>

</LinearLayout>
